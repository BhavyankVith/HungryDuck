<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_cool"
    tools:context="com.example.bk.hittheball.Start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points Table"
        android:fontFamily="sans-serif"
        android:textColor="#fff"
        android:textSize="32sp"/>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">


        <TableRow android:gravity="center_vertical">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bluetenpoint"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="10 POINT"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:paddingLeft="10dp"/>

        </TableRow>

        <TableRow android:gravity="center_vertical"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/yellowthirtypoint"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="30 POINT"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:paddingLeft="10dp"/>

        </TableRow>

        <TableRow android:gravity="center_vertical"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/decpoint"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-20 POINT"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:paddingLeft="10dp"/>

        </TableRow>

        <TableRow android:gravity="center_vertical"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/redsharkover"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="GAME OVER"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:textSize="18sp"
                android:paddingLeft="10dp"/>

        </TableRow>


    </TableLayout>



        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/startGame"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            app:sparkbutton_iconSize="200dp"
            app:sparkbutton_activeImage="@drawable/start"

            />



</LinearLayout>
